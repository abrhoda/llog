---
# -concurrency-mt-unsafe excluded for gmtime/localtime because c99
# -clang-diagnostic-format-nonliteral because this is specifically a logging lib
Checks: >
  -*,
  clang-diagnostic-*,
  clang-analyzer-*,
  bugprone-*,
  cert-*,
  clang-analyzer-*,
  concurrency-*,
  linuxkernel-*,
  llvm-*,
  misc-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  -llvm-header-guard,
  -concurrency-mt-unsafe,
  -clang-diagnostic-format-nonliteral
WarningsAsErrors: '*'
HeaderFileExtensions:
  - h
  - hh
ImplementationFileExtensions:
  - c
  - cc
HeaderFilterRegex: './include/*,*.h'
FormatStyle: file # change to file
#CheckOptions:
#  - { key: readability-identifier-naming.FunctionCase, value: lower_case }
#  - { key: readability-identifier-naming.VariableCase, value: lower_case }
#  - { key: readability-identifier-naming.EnumCase, value: lower_case }
#  - { key: readability-identifier-naming.EnumConstantCase, value: UPPER_CASE }
#  - { key: readability-identifier-naming.MacroCase, value: UPPER_CASE }
